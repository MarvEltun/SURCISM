<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pae14_1">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Misc.draft"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".ConnectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomePageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FunctionFragments.UltraSonicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FunctionFragments.InfraRedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FunctionFragments.RemoteControlActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".FunctionFragments.SelfBalanceActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>