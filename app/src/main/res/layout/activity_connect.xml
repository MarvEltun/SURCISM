<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBckColor">

    <Button
        android:id="@+id/cnt_btn"
        android:layout_width="@dimen/circ_dimen"
        android:layout_height="@dimen/circ_dimen"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_button"
        android:text="@string/connect_bluetooth"
        android:textAllCaps="false" />

    <ListView
        android:id="@+id/bluetooth_devices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:background="@color/black"
        android:elevation="2dp"
        android:visibility="gone">

    </ListView>
</RelativeLayout>
